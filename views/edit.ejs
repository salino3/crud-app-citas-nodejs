<% if (task) { %>
    <div>
<form class="p-5 border shadow" action="/update" method="POST">
    <h1 class="text-center text-primary mt-3 "><u>Editando la Cita nº <%= task.id %></u></h1>

    <input id="id" name="id" value="<%= task.id %>"  hidden>

   <div class="form-group ">
    <label for="Descripcion "><b  class=" text-primary">Descripción</b></label>
    <input required value="<%= task.descripcion %>" type="text" name="descripcion" class="form-control" id="descripcion"  aria-describedby="emailHelp" placeholder="Inserte la descripción de la cita">
  </div> 
   <div class="form-group ">
    <label for="fecha">
      <b class="text-primary">Fecha</b>
    </label>
    <input required value="<%= task.fecha %>" type="date" name="fecha" class="form-control" id="fecha" aria-describedby="emailHelp" placeholder="Inserte la fecha">
  </div>
     <div class="form-group ">
    <label for="hora">
      <b class="text-primary">Hora</b>
    </label>
    <input required value="<%= task.time %>" type="time" name="hora" class="form-control" id="hora" aria-describedby="emailHelp" placeholder="Inserte la hora">
  </div> 
       <div class="form-group ">
    <label for="duraccion">
      <b class="text-primary">Duracción minutos</b>
    </label>
    <input required value="<%= task.ejecucion %>" type="number" name="ejecucion" class="form-control" id="ejecucion" aria-describedby="emailHelp" placeholder="Inserta el tiempo de duracción">
  </div>
  <div class="form-group">
  </div>
  <button type="submit" class="btn btn-primary">Guardar</button>
  <a href="/"  class="btn btn-dark">Cancelar</a>
  </div>
</form>
<% } %>


  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
